@model Vinyl

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price &euro;</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Html.Raw(Model.ShortDescription)</h4>
        <p>@Html.Raw(Model.LongDescription)</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-VinylId="@Model.VinylId">Add to cart</a>
            </p>
        </div>
    </div>
</div>